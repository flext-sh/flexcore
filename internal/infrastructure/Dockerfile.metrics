# FlexCore Metrics Server Dockerfile
FROM golang:1.21-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY metrics_server.go .
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o metrics-server metrics_server.go

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /root/

COPY --from=builder /app/metrics-server .

EXPOSE 9090

CMD ["./metrics-server"]